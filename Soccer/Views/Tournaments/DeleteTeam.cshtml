@{
  Layout = "_Layout";
}

@model Soccer.Models.Team

<h3>Delete A Team</h3>
<hr>

<h4>Add a Tournament to this Team: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TeamId)
  <div class="form-group">

    @Html.Label("Select Tournament")
    @Html.DropDownList("Tournament", null, new { @class = "form-control"})
  </div>
  <br>
  <input type="submit" value="Delete" class="btn btn-dark"/>
}
<br>
<p class="btn btn-dark">@Html.ActionLink("Back to List", "Index")</p>
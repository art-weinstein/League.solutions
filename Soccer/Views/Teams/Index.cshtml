@{
  Layout = "_Layout";
}

@using Soccer.Models;

<div class = "jumbotron jumbotron-fluid">
  <h1>Teams</h1>
</div>

@if(@Model.Count == 0)
{
  <h3>No teams are in this tournament yet!</h3>
}

@foreach(Team team in Model)
{
  <li>@Html.ActionLink($"{team.Name}", "Details", new {id=team.TeamId})</li>
}

<p class="btn btn-outline-danger">@Html.ActionLink("Add new team", "Create")</p>
<p class="btn btn-outline-danger">@Html.ActionLink("Home", "Index", "Home")</p>


@{
  Layout = "_Layout";
}

@model Soccer.Models.Team

<div class = "jumbotron jumbotron-fluid">
  <h1>Team Details</h1>
</div>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@if(Model.JoinEntities.Count == 0)
{
  <p class="border border-danger">This team is not in a tournament</p>
}

else
{
  <h3>This team belongs:</h3>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Tournament.TournamentName</li>
    }
  </ul>
}
<p class="btn btn-dark">@Html.ActionLink("Add a Tournament", "AddTournament", new { id = Model.TeamId })</p>
<p class="btn btn-dark">@Html.ActionLink("Edit team", "Edit", new { id = Model.TeamId })</p>
<p class="btn btn-dark">@Html.ActionLink("Delete team", "Delete", new { id = Model.TeamId })</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</p>


